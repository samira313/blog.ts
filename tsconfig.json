{
  "compilerOptions": {
    "target": "es2020",                 // modern JavaScript output
    "module": "esnext",                 // use ES Modules (import/export)
    "rootDir": "./src",                 // main source code inside src
    "outDir": "./dist",                 // compiled output goes to dist
    "moduleResolution": "node",         // module resolution like Node.js
    "esModuleInterop": true,            // allow default import from CommonJS
    "forceConsistentCasingInFileNames": true, // enforce consistent file name casing
    "strict": true,                     // enable strict type-checking
    "skipLibCheck": true,               // skip type checking of node_modules
    "sourceMap": true                   // generate source maps for easier debugging
  },
  "include": ["src"],                   // only compile files inside src
  "exclude": ["node_modules", "dist"]   // exclude node_modules and dist from compilation
}
